{
  "name": "bulbo",
  "version": "7.0.0",
  "description": "Generate your static site with gulp plugins!",
  "main": "lib/index.js",
  "scripts": {
    "test": "mocha --exit --require babel-register test",
    "clean": "rimraf lib coverage",
    "dist": "babel src -d lib",
    "prepublish": "npm run clean && npm run dist",
    "demo-serve": "cd demo && ../bin/bulbo.js serve",
    "demo-build": "cd demo && ../bin/bulbo.js build",
    "cov": "nyc --reporter=lcov mocha --exit --require babel-register test",
    "cov-open": "npm run cov && open coverage/lcov-report/index.html",
    "codecov": "npm run cov && codecov",
    "lint": "standard",
    "precommit": "lint-staged"
  },
  "bin": {
    "bulbo": "./bin/bulbo.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kt3k/bulbo.git"
  },
  "keywords": [
    "static-site-generator"
  ],
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kt3k/bulbo/issues"
  },
  "homepage": "https://github.com/kt3k/bulbo#readme",
  "dependencies": {
    "chalk": "^2.3.1",
    "chokidar": "2.1.2",
    "gulp-plumber": "^1.1.0",
    "interpret": "^1.0.0",
    "liftoff": "^3.0.0",
    "minimisted": "^2.0.0",
    "minirocket": "^2.0.0",
    "stream-splicer": "^2.0.0",
    "vinyl-fs": "^3.0.0",
    "vinyl-serve": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.7.2",
    "browserify": "^16.0.0",
    "chai": "^4.0.2",
    "codecov": "^3.0.0",
    "dirty-chai": "^2.0.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.0.1",
    "mocha": "^6.0.0",
    "nyc": "^14.0.0",
    "prettier": "^1.13.4",
    "rimraf": "^3.0.0",
    "standard": "^13.0.1",
    "superagent": "^5.0.2",
    "through2": "^3.0.0"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "standard --fix",
      "git add"
    ]
  },
  "greenkeeper": {
    "ignore": [
      "chokidar"
    ]
  }
}
