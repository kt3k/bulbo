{
  "name": "bulbo",
  "version": "6.13.1",
  "description": "Generate your static site with gulp plugins!",
  "main": "lib/index.js",
  "scripts": {
    "test": "_mocha --require babel-register test",
    "clean": "rimraf lib coverage",
    "dist": "babel src -d lib",
    "prepublish": "npm run clean && npm run dist",
    "demo-serve": "cd demo && ../bin/bulbo.js serve",
    "demo-build": "cd demo && ../bin/bulbo.js build",
    "cov": "nyc --reporter=lcov _mocha --require babel-register test",
    "cov-open": "npm run cov && open coverage/lcov-report/index.html",
    "codecov": "npm run cov && codecov",
    "lint": "standard",
    "fix": "standard --fix"
  },
  "bin": {
    "bulbo": "./bin/bulbo.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kt3k/bulbo.git"
  },
  "keywords": [
    "static-site-generator"
  ],
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kt3k/bulbo/issues"
  },
  "homepage": "https://github.com/kt3k/bulbo#readme",
  "dependencies": {
    "chalk": "^1.1.1",
    "chokidar": "^1.4.2",
    "gulp-plumber": "^1.1.0",
    "interpret": "^1.0.0",
    "liftoff": "^2.2.0",
    "minimisted": "^2.0.0",
    "minirocket": "^2.0.0",
    "stream-splicer": "^2.0.0",
    "vinyl-fs": "^3.0.0",
    "vinyl-serve": "^2.8.0"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.7.2",
    "browserify": "^14.0.0",
    "chai": "^4.0.2",
    "codecov": "^3.0.0",
    "dirty-chai": "^2.0.0",
    "mocha": "^3.0.2",
    "nyc": "^11.0.2",
    "rimraf": "^2.5.2",
    "standard": "^10.0.0",
    "superagent": "^3.1.0",
    "through2": "^2.0.1"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
