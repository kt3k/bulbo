{
  "name": "bulbo",
  "version": "6.0.0",
  "description": "Gulp compatible static site generator",
  "main": "lib/bulbo.js",
  "scripts": {
    "test": "_mocha --require babel-register spec",
    "clean": "rimraf lib coverage",
    "dist": "babel src -d lib",
    "prepublish": "npm run clean && npm run dist",
    "demo-serve": "cd demo && ../bin/bulbo.js serve",
    "demo-build": "cd demo && ../bin/bulbo.js build",
    "cov": "nyc --reporter=lcov _mocha --require babel-register spec",
    "cov-open": "npm run cov && open coverage/lcov-report/index.html",
    "codecov": "codecov < coverage/lcov.info",
    "lint": "eslint src test"
  },
  "bin": {
    "bulbo": "bin/bulbo.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kt3k/bulbo.git"
  },
  "keywords": [
    "static-site-generator"
  ],
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kt3k/bulbo/issues"
  },
  "homepage": "https://github.com/kt3k/bulbo#readme",
  "dependencies": {
    "chalk": "^1.1.1",
    "chokidar": "^1.4.2",
    "eslint-plugin-promise": "^1.1.0",
    "interpret": "^1.0.0",
    "liftoff": "^2.2.0",
    "minimist": "^1.2.0",
    "stream-splicer": "^2.0.0",
    "vinyl-fs": "^2.2.1",
    "vinyl-serve": "^2.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "browserify": "^13.0.0",
    "chai": "^3.4.1",
    "codecov.io": "^0.1.6",
    "eslint": "^2.9.0",
    "eslint-config-souffle": "^4.0.0",
    "eslint-config-standard": "^5.2.0",
    "eslint-plugin-standard": "^1.3.2",
    "mocha": "^2.3.4",
    "nyc": "^6.4.0",
    "rimraf": "^2.5.2",
    "superagent": "^1.6.1",
    "through": "^2.3.8",
    "through2": "^2.0.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "mocha": true
    },
    "rules": {
      "indent": 2
    }
  },
  "nyc": {
    "exclude": [
      "spec/**/*"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
