{
  "name": "bulbo",
  "version": "0.1.2",
  "description": "Stream oriented static site generator, based on gulp ecosystem",
  "main": "lib/index.js",
  "scripts": {
    "test": "_mocha spec",
    "test-s": "cd spec && ../bin/bulbo.js serve",
    "test-b": "cd spec && ../bin/bulbo.js build",
    "cov": "nyc --reporter=lcov _mocha spec",
    "cov-open": "npm run cov && open coverage/lcov-report/index.html",
    "lint": "souffle"
  },
  "bin": {
    "bulbo": "bin/bulbo.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kt3k/bulbo.git"
  },
  "keywords": [
    "static-site-generator"
  ],
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kt3k/bulbo/issues"
  },
  "homepage": "https://github.com/kt3k/bulbo#readme",
  "dependencies": {
    "chokidar": "^1.4.2",
    "interpret": "^1.0.0",
    "liftoff": "^2.2.0",
    "minimist": "^1.2.0",
    "subclassjs": "^1.3.0",
    "vinyl-fs": "^2.2.1",
    "vinyl-serve": "^1.2.1"
  },
  "devDependencies": {
    "browserify": "^12.0.1",
    "mocha": "^2.3.4",
    "nyc": "^5.1.1",
    "souffle-cli": "^2.0.2",
    "through": "^2.3.8"
  },
  "config": {
    "nyc": {
      "exclude": ["spec"]
    }
  }
}
