{
  "name": "bulbo",
  "version": "2.2.1",
  "description": "Streaming static site generator, based on gulp",
  "main": "lib/bulbo.js",
  "scripts": {
    "test": "_mocha --require babel-register spec",
    "dist": "babel src -d lib",
    "prepublish": "npm run dist",
    "demo-serve": "cd demo && ../bin/bulbo.js serve",
    "demo-build": "cd demo && ../bin/bulbo.js build",
    "cov": "nyc --reporter=lcov _mocha --require babel-register spec",
    "cov-open": "npm run cov && open coverage/lcov-report/index.html",
    "codecov": "codecov < coverage/lcov.info",
    "lint": "souffle"
  },
  "bin": {
    "bulbo": "bin/bulbo.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kt3k/bulbo.git"
  },
  "keywords": [
    "static-site-generator"
  ],
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kt3k/bulbo/issues"
  },
  "homepage": "https://github.com/kt3k/bulbo#readme",
  "dependencies": {
    "chalk": "^1.1.1",
    "chokidar": "^1.4.2",
    "interpret": "^1.0.0",
    "liftoff": "^2.2.0",
    "minimist": "^1.2.0",
    "subclassjs": "^1.3.0",
    "vinyl-fs": "^2.2.1",
    "vinyl-serve": "^1.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "browserify": "^12.0.1",
    "chai": "^3.4.1",
    "codecov.io": "^0.1.6",
    "mocha": "^2.3.4",
    "nyc": "^5.1.1",
    "rimraf": "^2.5.0",
    "souffle-cli": "^2.0.2",
    "superagent": "^1.6.1",
    "through": "^2.3.8"
  },
  "souffle": {
    "globals": [
      "it",
      "describe",
      "beforeEach"
    ]
  },
  "config": {
    "nyc": {
      "exclude": [
        "spec",
        "lib/mergeStream.js"
      ]
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
